{
    "compilerOptions": {
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowJs": false,
      "declaration": true,
      "declarationMap": true,
      "downlevelIteration": true,
      "importHelpers": true,
      "isolatedModules": false,
      "lib": ["ES5", "ES6", "es2020"],
      "outDir": "dist",
      "sourceMap": true,
      "target": "ES2021",
      "alwaysStrict": true,
      "noImplicitThis": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "module": "CommonJS"
    },
    "include": ["src/**/*.ts", "src/index.cts", "src/index.cts"],
    "exclude": ["node_modules"]
  }
  